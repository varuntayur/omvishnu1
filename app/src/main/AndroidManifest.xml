<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.varun.omvishnu.app" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/dashavatharam"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.varun.omvishnu.app.OmActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.varun.omvishnu.app.ScreenSlideActivity"
            android:label="@string/title_screen_slide"
            android:parentActivityName="com.varun.omvishnu.app.OmActivity"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name="com.varun.omvishnu.app.ThousandNamesFragment"
            android:label="@string/title_screen_slide"
            android:parentActivityName="com.varun.omvishnu.app.OmActivity"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="com.varun.omvishnu.app.ThousandNamesByBirthStarsFragment"
            android:label="@string/title_screen_slide"
            android:parentActivityName="com.varun.omvishnu.app.OmActivity"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

    </application>

</manifest>
